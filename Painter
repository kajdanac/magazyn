import java.awt.image.BufferedImage;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.JComponent;

public class Painter extends JComponent
{
	private static final long serialVersionUID = -4753003394230538958L;
	BufferedImage background;
	BufferedImage forklift;
	BufferedImage truck;
	Painter()
	{
		try
		{
			background = ImageIO.read(getClass().getResource("/art/bacground.png"));
			forklift = ImageIO.read(getClass().getResource("/art/forklift.png"));
			truck = ImageIO.read(getClass().getResource("/art/truck.png"));
		} catch (IOException e)
		{
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
